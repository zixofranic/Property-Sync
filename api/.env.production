# Production Environment Variables for Railway Deployment
# Replace with your actual production values

# Database Configuration (Neon Production)
DATABASE_URL="postgresql://username:password@ep-xxxxx.us-east-1.postgres.neon.tech/property_sync_prod?sslmode=require"
DIRECT_URL="postgresql://username:password@ep-xxxxx.us-east-1.postgres.neon.tech/property_sync_prod?sslmode=require"

# JWT Configuration
JWT_SECRET="your-super-secure-jwt-secret-for-production"
JWT_REFRESH_SECRET="your-super-secure-refresh-secret-for-production"

# Email Service (Resend)
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxx"
FROM_EMAIL="noreply@yourdomain.com"

# Application Configuration
NODE_ENV="production"
PORT="3001"

# CORS Configuration
ALLOWED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"

# File Upload Configuration
MAX_FILE_SIZE="10485760"  # 10MB in bytes
UPLOAD_DEST="./uploads"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"  # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"

# Security Headers
HELMET_ENABLED="true"